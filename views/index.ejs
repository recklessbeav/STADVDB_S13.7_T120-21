<html>
<head>
    <title>Corona Virus Update</title>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" 
    integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="all" href="/style.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Red+Rose&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:black|Ubuntu" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css2?family=Tienne&display=swap' rel='stylesheet'>
    
    <!-- JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" 
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" 
    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" 
    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
</head>
<body>

    <nav class="navbar navbar-expand-lg sticky-top navbar-dark">
        <ul>
            <li class="title">
                CORONA VIRUS UPDATE
            </li>
            <li>
                <i>As of July 27, 2020</i>
            </li>
        </ul>
        <!-- <a class="navbar-brand" href="/"><img src="title2.png" style="height: 50px;"></a>    -->
    </nav>
           

    <div class="container">
        <h1 class="header">OVERVIEW</h1>
        <div class="row mt-5">
            <div class = "case_holder" id = "total_cases">
                <svg width="198" height="100" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="15" cy="15" r="5" fill="#FAA613" fill-opacity="0.81"/>
                </svg>
                <div class = "content_case">
                    <p id = "number">73.4M</p> <br>
                    <p class = "caseword">Total Cases</p>
                </div>
            </div>
            <div class = "case_holder" id = "recovered_cases">
                <svg width="198" height="100" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="15" cy="15" r="5" fill="#688E26" fill-opacity="0.81"/>
                </svg>
                <div class = "content_case">
                    <p id = "number">41.5M</p> <br>
                    <p class = "caseword">Recovered Cases</p>
                </div>
            </div>
            <div class = "case_holder" id = "death_cases">
                <svg width="198" height="100" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="15" cy="15" r="5" fill="#F44708" fill-opacity="0.81"/>
                </svg>
                <div class = "content_case">
                    <p id="number">1.63M</p> <br>
                    <p class = "caseword">Death Cases</p>
                </div>
            </div>
        </div>
        <div class="container px-5 pt-5 pb-3" style="background-color: #550526;">
            <form method="post">
                <div class="row">
                    <div class="col">
                        <label for="cases_table">Cases</label>
                        <select id="cases_table" name="cases_table"
                            style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="All_Cases" selected>All Cases</option>
                            <option value="confirmed">Confirmed Cases</option>
                            <option value="deaths">Death Cases</option>
                            <option value="recovered">Recovered Cases</option>
                            <option value="active">Active Cases</option>
                            <option value="new_cases">New Cases</option>
                            <option value="new_deaths">New Deaths Cases</option>
                            <option value="new_recovered">New Recovered Cases</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="country_table">Country</label>
                        <select id="country_table" name="country_table"
                            style="border: solid 1px  rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="All_Countries" selected>All Countries</option>
                            <!-- <option value="New Cases">Afghanistan</option> -->
                            <!-- <option value="Active Cases">Philippines</option> -->
                            <% for (const i in country) { %>
                                <option value="<%= country[i].COUNTRY %>"> <%= country[i].COUNTRY %> </option>
                            <% } %>
                        </select>
                    </div>
                    <div class="col">
                        <!-- <label for="start_date">Start Date</label> -->
                        <label for="start_date">Month</label>
                        <!-- <input type="date" id="start_date" name="start_date" style="height: 28px"> -->
                        <select id="start_date" name="start_date"
                            style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="All_Months" selected>All Months</option>
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                        </select>
                    </div>
                    <!-- <div class="col-2">
                        <label for="end_date">End Date</label>
                        <input type="date" id="end_date" name="end_date" style="height: 28px">
                    </div> -->
                    <div class="col text-right">
                        <!-- <a href="/filtered" class="btn btn-success" role="button">Filter</a> -->
                        <input type="submit" class="btn btn-success" value="Filter">
                    </div>
                    <div class="col text-right">
                        <a href="/" class="btn btn-success btn-reset" role="button">Reset</a>
                    </div>
                </div>
                <div class="row pt-2">
                    <div class="inside_table">
                        <!-- insert table here -->
                        <table border="1">
                            <tr>
                                <th>Country</th>
                                <th>Month</th>
                                <th>Confirmed Cases</th>
                                <th>Death Cases</th>
                                <th>Recovered Cases</th>
                                <th>Active Cases</th>
                                <th>New Cases</th>
                                <th>New Deaths Cases</th>
                                <th>New Recovered Cases</th>
                            </tr>
                            <%
                            if(userData.length!=0){
                            var i=1;
                            userData.forEach(function(data){
                            %>
                            <tr>
                                <td><%=data.country %></td>
                                <td><%=data.month %></td>
                                <td><%=data.confirmed %></td>
                                <td><%=data.deaths %></td>
                                <td><%=data.recovered %></td>
                                <td><%=data.active %></td>
                                <td><%=data.new_cases %></td>
                                <td><%=data.new_deaths %></td>
                                <td><%=data.new_recovered %></td>
                            </tr>
                            <%  i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                            <% } %>
                        </table>
                            
                    </div>
                 </div>
                <!-- <div class="row d-flex justify-content-end pt-5">
                    <a href="/" class="btn btn-success btn-reset" role="button">Reset</a>
                </div> -->
            </form>
        </div>

        <h1 class="header">TOTAL</h1>
        <div class="row table p-5">
            <form id="total-form" method="POST">
                <div class="form-row">
                    <div class="form-group col">
                        <select id="country_total" name="country_total" style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="none" selected>None</option>
                            <option value="All_Countries">All Countries</option>
                            <% for (const i in country) { %>
                                <option value="<%= country[i].COUNTRY %>"> <%= country[i].COUNTRY %> </option>
                            <% } %>
                        </select>

                        <select id="continent_total" name="continent_total" style="border: solid 1px rgb(116, 115, 115); background-color: white; cursor: pointer; height: 28px; margin-bottom: 15px">
                            <option value="none" selected>None</option>
                            <option value="All_Continent">All Continents</option>
                            <% for (const i in continent) { %>
                                <option value="<%= continent[i].continent %>"> <%= continent[i].continent %> </option>
                            <% } %>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-success" value="Filter">              
                </div>

                <div class="row table justify-content-center">
                    <%
                    if(oneData.length!=0){
                        var i=1;
                        oneData.forEach(function(data){
                    %>
                    <div class="card">
                        <i class="fa fa-circle" style="color:#FAA613"></i>
                        <h2 class="num-cases" id="total_cases" name="total_cases"><%=data.total_cases %></h2>
                        <p class="case-type">Total cases</p>
                    </div>
                    
                    <div class="card">
                        <i class="fa fa-circle" style="color:#688E26"></i>
                        <h2 class="num-cases" id="total_recovered" name="total_recovered"><%=data.total_recovered %></h2>
                        <p class="case-type">Recovered</p>
                    </div>
                    
                    <div class="card">
                        <i class="fa fa-circle" style="color:#F44728"></i>
                        <h2 class="num-cases" id="total_deaths" name="total_deaths"><%=data.total_deaths %></h2>
                        <p class="case-type">Deaths</p>
                    </div>
                    
                    <div class="card">
                        <i class="fa fa-circle" style="color:#138BFA"></i>
                        <h2 class="num-cases" id="active_cases" name="active_cases"><%=data.active_cases %></h2>
                        <p class="case-type">Active cases</p>
                    </div>
                    
                    <div class="card">
                        <i class="fa fa-circle" style="color:#D235B9"></i>
                        <h2 class="num-cases" id="new_cases" name="new_cases"><%=data.new_cases %></h2>
                        <p class="case-type">New cases</p>
                    </div>

                    <%  i++; }) %>
                    <% } %>
                </div>
            </form>
            <div class="row justify-content-end" style="width:100%">
                <a href="/" class="btn btn-success btn-reset" name="reset_total" id="reset_total" role="button">Reset</a>
            </div>
        </div>
    </div>
</body>
</html>
